<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiyuan.xylibsdemo.activity.PreferenceActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/keyWapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="key"
        android:padding="5dp">
        <EditText
            android:id="@+id/keyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#cccccc"
            android:textColor="#666666"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/valueWapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="value"
        android:padding="5dp"
        android:layout_below="@+id/keyWapper">
        <EditText
            android:id="@+id/valueEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#cccccc"
            android:textColor="#666666"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:id="@+id/saveTV"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:textColor="@color/green"
    android:clickable="false"
    android:layout_below="@+id/valueWapper"
    android:layout_marginTop="12dp"
    android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/readTV"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/cyan"
        android:clickable="false"
        android:layout_below="@+id/saveTV"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
